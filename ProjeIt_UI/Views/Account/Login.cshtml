@model ProjeIt_UI.Models.Kullanici

@{
    Layout = null;
}

<div class="row" style="margin: 226px; margin-left:34%;">
    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-8 hidden-xs hidden-sm">
       
        <div class="hero">
            <div class="pull-left login-desc-box-l">
             
                <img src="~/css/InspeccoLogo.png" style="height:40px;">
               
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4" style="width:500px; height:650px; padding:20px">
        <div class="well no-padding">
            <label style="color:red !important;">@ViewBag.Error</label>
            @*@using (Html.BeginForm("Account", "Login", FormMethod.Post, new { @class = "smart-form client-form" }))
            {*@
        <form action="#" method="post">
            <fieldset style="height:200px;">
                <h2 style="text-align:center;">KULLANICI GİRİŞİ</h2>
                <div style=" padding: 18px; margin-left: 129px;">
                    <section>

                        <label class="input">
                            <i class="icon-append fa fa-user"></i>
                            
                            <input type="text" name="KullaniciAdi" placeholder="Kullanıcı Adı" value="" style="padding:6px" required>

                        </label>
                    </section>

                    <section>

                        <label class="input">
                            <i class="icon-append fa fa-lock"></i>
                            <input type="password" name="Sifre" placeholder="Şifre " value="" required style="padding:6px;margin-top:5px;">

                        </label>
                        <div style="margin:5px; padding-left:135px;">
                            <input type="submit" class="btn btn-success btn-lg" value="Giriş" />
                                
                          
                        </div>
                    </section>
                </div>
            </fieldset>
        </form>
            

        </div>
    </div>
</div>

<script type="text/javascript">

    runAllForms();
    $(function () {
        // Validation
        $("#login-form").validate({
            // Rules for form validation
            rules: {
                email: {
                    required: true,
                    email: true
                },
                password: {
                    required: true,
                    minlength: 3,
                    maxlength: 20
                }
            },

            // Messages for form validation
            messages: {
                email: {
                    required: 'Lütfen Email Adresinizi giriniz',
                    email: 'Geçerli email adresi giriniz'
                },
                password: {
                    required: 'Lütfen şifrenizi giriniz'
                }
            },

            // Do not change code below
            errorPlacement: function (error, element) {
                error.insertAfter(element.parent());
            }
        });
    });


</script>


